{
  "reporterEnabled": "mocha-junit-reporter, mochawesome, xunit",
  "mochaJunitReporterReporterOptions": {
    "mochaFile": "reports/junit-test-results.xml",
    "useFullSuiteTitle": false,
    "testCaseSwitchClassnameAndName": true,
    "includePending": true
  },
  "xunitReporterOptions": {
    "output": "reports/xunit-test-results.xml"
  },
  "mochawesomeReporterOptions": {
    "reportFilename":"mocha-test-results",
    "reportDir":"reports",
    "inlineAssets": true,
    "overwrite": true
  }
}